<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All locations
    </h1>

    <a href="/locations/new" class="btn btn-block btn-outline-secondary">
      Add a new location
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          City
        </th>

        <th>
          Indooroutdoor
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @locations.each do |location| %>
      <tr>
        <!-- Display location.id start -->
        <td>
          <%= location.id %>
        </td>
        <!-- Display location.id end -->

        <!-- Display location.city start -->
        <td>
          <%= location.city %>
        </td>
        <!-- Display location.city end -->

        <!-- Display location.indooroutdoor start -->
        <td>
          <%= location.indooroutdoor %>
        </td>
        <!-- Display location.indooroutdoor end -->

        <!-- Display location.created_at start -->
        <td>
          <%= time_ago_in_words(location.created_at) %> ago
        </td>
        <!-- Display location.created_at end -->

        <!-- Display location.updated_at start -->
        <td>
          <%= time_ago_in_words(location.updated_at) %> ago
        </td>
        <!-- Display location.updated_at end -->

        <td>
          <a href="/locations/<%= location.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
