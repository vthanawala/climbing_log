<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All locations
    </h1>

    <a href="/locations/new" class="btn btn-block btn-outline-secondary">
      Add a new location
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "location_templates/locations_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          City
        </th>

        <th>
          Indooroutdoor
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @locations.each do |location| %>
      <tr>
        <td>
          <%= location.id %>
        </td>

        <td>
          <%= location.city %>
        </td>

        <td>
          <%= location.indooroutdoor %>
        </td>

        <td>
          <%= time_ago_in_words(location.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(location.updated_at) %> ago
        </td>

        <td>
          <a href="/locations/<%= location.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @locations, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
