<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Climbs

    <a data-toggle="collapse" href="#location_climbs_new_form">
      Add climb
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @location.climbs.each do |climb| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <a href="/climbs/<%= climb.id %>">
          <%= climb.user_id %>
        </a>

        <%if current_user == climb.user %>
          <a href="/delete_climb_from_location/<%= climb.id %>">
            Delete
          </a>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="location_climbs_new_form">
        <%= render partial: "location_templates/location_climbs_new_form" %>
      </div>
    </div>

  </ul>
</div>
