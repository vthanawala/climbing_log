<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All climbs
    </h1>

    <a href="/climbs/new" class="btn btn-block btn-outline-secondary">
      Add a new climb
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "climb_templates/climbs_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          User
        </th>

        <th>
          Location
        </th>

        <th>
          Rating
        </th>

        <th>
          Picture
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @climbs.each do |climb| %>
      <tr>
        <td>
          <%= climb.id %>
        </td>

        <td>
          <% if climb.user.present? %>
            <a href="/users/<%= climb.user.id %>">
              <%= climb.user.email %>
            </a>
          <% end %>
        </td>

        <td>
          <% if climb.location.present? %>
            <a href="/locations/<%= climb.location.id %>">
              <%= climb.location.city %>
            </a>
          <% end %>
        </td>

        <td>
          <%= climb.rating %>
        </td>

        <td>
          <img src='<%= climb.picture %>' class='img-fluid'>
        </td>

        <td>
          <%= time_ago_in_words(climb.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(climb.updated_at) %> ago
        </td>

        <td>
          <a href="/climbs/<%= climb.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @climbs, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
