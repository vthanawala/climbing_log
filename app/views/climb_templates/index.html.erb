<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All climbs
    </h1>

    <a href="/climbs/new" class="btn btn-block btn-outline-secondary">
      Add a new climb
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          User
        </th>

        <th>
          Location
        </th>

        <th>
          Rating
        </th>

        <th>
          Picture
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @climbs.each do |climb| %>
      <tr>
        <!-- Display climb.id start -->
        <td>
          <%= climb.id %>
        </td>
        <!-- Display climb.id end -->

        <!-- Display climb.user_id start -->
        <td>
          <%= climb.user.email %>
        </td>
        <!-- Display climb.user_id end -->

        <!-- Display climb.location_id start -->
        <td>
          <%= climb.location.city %>
        </td>
        <!-- Display climb.location_id end -->

        <!-- Display climb.rating start -->
        <td>
          <%= climb.rating %>
        </td>
        <!-- Display climb.rating end -->

        <!-- Display climb.picture start -->
        <td>
          <img src='<%= climb.picture %>' class='img-fluid'>
        </td>
        <!-- Display climb.picture end -->

        <!-- Display climb.created_at start -->
        <td>
          <%= time_ago_in_words(climb.created_at) %> ago
        </td>
        <!-- Display climb.created_at end -->

        <!-- Display climb.updated_at start -->
        <td>
          <%= time_ago_in_words(climb.updated_at) %> ago
        </td>
        <!-- Display climb.updated_at end -->

        <td>
          <a href="/climbs/<%= climb.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
